<div class="empInfoDiv">
    <form action="/emp/enroll" method="post">
        <input type="hidden" name="picture" value="exam">
        <input type="hidden" name="empNo" value="12341234">
        <input type="hidden" name="address">
        <div class="rightContainer">
            <div class="formContainer">
                <div class="leftSection">
                    <img src="https://cdn.crowdpic.net/detail-thumb/thumb_d_A16F73BD4E03AEFFE499086BBC0E3CD1.jpg"
                        width="120" height="170">
                    <div class="buttonContainer">
                        <button type="button">등록</button>
                        <button type="button">삭제</button>
                    </div>
                </div>
                <div class="rightSection">
                    <table>
                        <tr>
                            <td>입사일자</td>
                            <td><input type="date" name="hireDate" required></td>
                            <td>퇴사일자</td>
                            <td><input type="date" name="exitDate"></td>
                        </tr>
                        <tr>
                            <td>부서</td>
                            <td colspan="3">
                                <select id="dept" name="dept" required>
                                    <option value="인사부">인사부</option>
                                    <option value="영업부">영업부</option>
                                    <option value="마케팅부">마케팅부</option>
                                    <option value="개발부">개발부</option>
                                    <option value="고객지원부">고객지원부</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>직책</td>
                            <td colspan="3">
                                <select id="position" name="position" required>
                                    <option value="사원">사원</option>
                                    <option value="대리">대리</option>
                                    <option value="과장">과장</option>
                                    <option value="팀장">팀장</option>
                                    <option value="부장">부장</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td>근무형태</td>
                            <td colspan="3">
                                <select id="workType" name="workType" required>
                                    <option value="정규직">정규직</option>
                                    <option value="계약직">계약직</option>
                                    <option value="인턴직">인턴직</option>
                                </select>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <table class="bottomTable">
                <tr>
                    <td>사원명</td>
                    <td colspan="3"><input type="text" name="name" value="<%= empInfo.name %>"
                            required></td>
                <tr>
                    <td>주민번호</td>
                    <td><input type="tel" name="regNumber"
                            value="<%= empInfo.regNumber.substring(0, 8) %>******"
                            pattern="[0-9]{6}-[0-9]{7}" required>
                    </td>
                    <td>성별</td>
                    <td>
                        <select id="gender" name="gender">
                            <option value="male" <%=['1', '3' ].includes(empInfo.regNumber[7])
                                ? 'selected' : '' %>>남자</option>
                            <option value="female" <%=['2', '4' ].includes(empInfo.regNumber[7])
                                ? 'selected' : '' %>>여자</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>핸드폰</td>
                    <td colspan="3">
                        <input type="tel" name="phoneNumber" pattern="[0-9]{3}"
                            value="<%= empInfo.phoneNumber.split('-')[0] %>" required> -
                        <input type="tel" name="phoneNumber2" pattern="[0-9]{4}"
                            value="<%= empInfo.phoneNumber.split('-')[1] %>" required> -
                        <input type="tel" name="phoneNumber3" pattern="[0-9]{4}"
                            value="<%= empInfo.phoneNumber.split('-')[2] %>" required>
                    </td>
                <tr>
                </tr>
                <td>전화번호</td>
                <td colspan="3">
                    <input type="tel" name="homeNumber"
                        value="<%= empInfo.homeNumber.split('-')[0] %>">
                    <input type="tel" name="homeNumber2"
                        value="<%= empInfo.homeNumber.split('-')[1] %>">
                    <input type="tel" name="homeNumber3"
                        value="<%= empInfo.homeNumber.split('-')[2] %>">
                </td>
                </tr>
                <tr>
                    <td>이메일</td>
                    <td colspan="3"><input type="text" name="email1" required> @ <input type="text"
                            name="email2" required>
                        <select id="emailOptions" name="email">
                            <option value="직접입력">직접입력</option>
                            <option value="naver.com">naver.com</option>
                            <option value="gmail.com">gmail.com</option>
                            <option value="yahoo.com">yahoo.com</option>
                            <option value="hotmail.com">hotmail.com</option>
                            <option value="outlook.com">outlook.com</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>현주소</td>
                    <td colspan="3">
                        <input type="text" id="sample6_postcode" placeholder="우편번호" required>
                        <input type="button" onclick="sample6_execDaumPostcode()" value="우편번호 찾기"
                            required>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td colspan="3">
                        <input type="text" id="sample6_address" placeholder="주소" required>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td colspan="3">
                        <input type="text" id="sample6_detailAddress" placeholder="상세주소" required>
                        <input type="text" id="sample6_extraAddress" placeholder="참고항목" required>
                    </td>
                </tr>
                <tr>
                    <th colspan="4"><input type="submit" value="등록"><input type="reset" value="취소">
                    </th>
                </tr>
            </table>
        </div>
    </form>
</div>