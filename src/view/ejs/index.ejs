<!doctype html>
<html lang="en">
    <head>
        <title>로그인</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <link href="/login.css" rel="stylesheet">
    </head>

    <body>
        <header>
            <!-- place navbar here -->
        </header>
        <main id="main">
            <div class="container text-center">
                <div class="row">
                    <div class="col-md-auto">
                        <form action="/emp/login" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInput" name="empNo">
                                <label for="floatingInput">사원번호</label>
                            </div> 
                            <div class="form-floating">
                                <input type="password" class="form-control" id="floatingPassword" name="pwd">
                                <label for="floatingPassword">비밀번호</label>
                                <% if (typeof msg !== 'undefined' && msg) { %>
                                    <p style="color: red; text-align: left;"><%= msg %></p>
                                <% } %>
                            </div> 
                            <button class="btn btn-dark">로그인</button>
                        </form>
                    </div>
                </div>
                <div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="alwaysLogin" checked/>
                        <label class="form-check-label" for="alwaysLogin"> 아이디 저장 </label>
                        <div id="tags">
                            <a href="">비밀번호 변경</a> | <a href="">비밀번호 찾기</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <footer>
            <!-- place footer here -->
        </footer>
        <!-- Bootstrap JavaScript Libraries -->
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
